{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "types": ["node", "express"],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true 
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
